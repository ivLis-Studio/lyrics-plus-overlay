{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "lyrics-plus-overlay",
  "version": "1.1.3",
  "identifier": "com.ivlis.lyrics-plus-overlay",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Lyrics Plus Overlay",
        "width": 500,
        "height": 200,
        "x": 100,
        "y": 100,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": true,
        "visible": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' https: data:; style-src 'self' 'unsafe-inline'; connect-src 'self' http://localhost:15000"
    },
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ2MDI1NjVGMTQwNTExNDcKUldSSEVRVVVYMVlDUm1PRkhuMHFtajEzM0VsYWg0bm56ZWN5eG5UdDNROWo5SzJ4YitPbzBZTVEK",
      "endpoints": [
        "https://github.com/ivLis-Studio/lyrics-plus-overlay/releases/latest/download/latest.json"
      ]
    },
    "deep-link": {
      "desktop": {
        "schemes": [
          "lyrics-plus"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "languages": [
          "English",
          "Korean"
        ]
      }
    }
  }
}
