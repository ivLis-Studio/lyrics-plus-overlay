{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "lyrics-plus-overlay",
  "version": "0.1.0",
  "identifier": "com.ivlis.lyrics-plus-overlay",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Lyrics Plus Overlay",
        "width": 500,
        "height": 200,
        "x": 100,
        "y": 100,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": true,
        "visible": true,
        "shadow": false
      },
      {
        "label": "settings",
        "title": "Settings",
        "width": 400,
        "height": 600,
        "visible": false,
        "resizable": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' https: data:; style-src 'self' 'unsafe-inline'; connect-src 'self' http://localhost:15000"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}